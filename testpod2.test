apiVersion: v1
kind: ServiceAccount
metadata:
  name: twistlock-service
  namespace: prisma-cloud-defender
  annotations:
    iam.gke.io/gcp-service-account: prisma-defender-gke-wi@gcp-gcs-pso.iam.gserviceaccount.com
---
apiVersion: v1
kind: Pod
metadata:
  name: testpod2
  namespace: prisma-cloud-defender
spec:
  serviceAccountName: mypodserviceaccount
  containers:
  - image: gcr.io/google.com/cloudsdktool/cloud-sdk:slim
    imagePullPolicy: IfNotPresent
    name: testpod2
    resources:
      requests:
        cpu: 100m
    stdin: true
    stdinOnce: true
    terminationMessagePath: /dev/termination-log
    terminationMessagePolicy: File
    tty: true
    volumeMounts:
      - mountPath: "/var/secrets"
        name: mysecret
  volumes:
  - name: mysecret
    csi:
      driver: secrets-store.csi.k8s.io
      readOnly: true
      volumeAttributes:
        secretProviderClass: "app-secrets"
